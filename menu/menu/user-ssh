echo -e "OVPN Download    : https://$domain:81/"
echo -e "\033[1;93m---------------------------------------------------\033[0m"
echo -e "Save Link Account: https://$domain:81/ssh-$user.txt"
echo -e "\033[1;93m---------------------------------------------------\033[0m"
echo -e "Creado el        : $Tanggal"
echo -e "Termina en       : $Pass"
echo -e "----------------------------------------------------------------------"
echo -e ""
read -n 1 -s -r -p "Presione cualquier tecla para regresar al MENU"
menu
